<h1><%= @cocktail.name %></h1>

<h3>Doses:</h3>
<ul>
 <% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to "Delete", dose_path(dose), method: :delete, class: "btn btn-primary", :data => {:confirm => "Are You Sure?"} %>
    </li>
  <% end %>
</ul>

<%= link_to '🥄Add dose', new_cocktail_dose_path(@cocktail),  class: "btn btn-primary" %>

<%= link_to '🍸🍹All cocktails', cocktails_path,  class: "btn btn-primary"  %>


