<body style="background-color:lightgrey;">
<div class="row">
  <div class="left-button">
    <%= link_to '🔙', cocktails_path, class: "ml-3" %>
  </div>
</div>

<div class="d-flex flex-wrap">
    <div class="cocktail-img" style="background-image: url('<%= cl_image_path @cocktail.photo.key, height: 250 %>');">
       <h1><%= @cocktail.name.capitalize %></h1>
            <% @cocktail.doses.each do |dose| %>
             <div class="ml-2">
             <p><%= dose.description %> - <%= dose.ingredient.name %> <%= link_to dose_path(dose.id),
              method: :delete,
              data: { confirm: "Are you sure?" } do %>
             <i class="far fa-trash-alt"></i>
              <% end %></p>
              <% end %>
    </div>
</div>

<%= link_to 'Edit', edit_cocktail_path(@cocktail),
      class: "btn btn-warning" %>
      <%= link_to 'Add 🍾', new_cocktail_dose_path(@cocktail),
      class: "btn btn-warning" %>

    <%= link_to "Delete", cocktail_path(@cocktail),
        method: :delete,
        data: { confirm: "Are you sure?" },
        class: "btn btn-warning" %>


